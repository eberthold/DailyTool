<UserControl x:Class="DailyTool.UserInterface.Daily.MeetingInfoEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:DailyTool.UserInterface.Daily"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:DailyTool.ViewModels.Daily"
             d:DataContext="{d:DesignInstance Type=vm:MeetingInfoEditViewModel,
                                              IsDesignTimeCreatable=False}"
             mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="12" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TimePicker Header="TODO: Start" SelectedTime="{Binding StartTime, Mode=TwoWay}" />
            <TimePicker Header="TODO: Ende" SelectedTime="{Binding EndTime, Mode=TwoWay}" />
        </StackPanel>

        <TextBox Grid.Row="2"
                 Header="TODO: Sprint Board URL"
                 Text="{Binding SprintBoardUri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
